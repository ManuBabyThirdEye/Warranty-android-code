<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:background="@android:color/transparent">

    <View
        android:id="@+id/shopName"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:background="@color/light_transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/offerImage"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/light_transparent"
        app:layout_constraintTop_toBottomOf="@+id/shopName"
         />

    <View
        android:id="@+id/offerImage1"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/offerImage"
        app:layout_constraintStart_toEndOf="@+id/offerImage"
        app:layout_constraintTop_toBottomOf="@+id/shopName" />

    <View
        android:id="@+id/offerDetails"
        android:layout_width="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="14dp"
        android:layout_marginTop="5dp"
        android:background="@color/light_transparent"
        app:layout_constraintTop_toBottomOf="@+id/offerImage"
    />

    <View
        android:id="@+id/tv_time"
        android:layout_width="150dp"
        android:layout_height="12dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/light_transparent"
        app:layout_constraintTop_toBottomOf="@+id/offerDetails"
        />

    <View
        android:id="@+id/shopName1"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginTop="40dp"
        android:background="@color/light_transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_time" />

    <View
        android:id="@+id/offerImage2"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/light_transparent"
        app:layout_constraintTop_toBottomOf="@+id/shopName1"
        />

    <View
        android:id="@+id/offerImage3"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/offerImage2"
        app:layout_constraintStart_toEndOf="@+id/offerImage2"
        app:layout_constraintTop_toBottomOf="@+id/shopName1" />

    <View
        android:id="@+id/offerDetails1"
        android:layout_width="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="14dp"
        android:layout_marginTop="5dp"
        android:background="@color/light_transparent"
        app:layout_constraintTop_toBottomOf="@+id/offerImage2"
        />

    <View
        android:layout_width="150dp"
        android:layout_height="12dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/light_transparent"
        app:layout_constraintTop_toBottomOf="@+id/offerDetails1"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

